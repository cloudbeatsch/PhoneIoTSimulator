<?xml version='1.0' encoding='utf-8'?>
<widget id="org.irjudson.simulator" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IoT Simulator</name>
    <description>
    	A mobile application providing simulation data.
    </description>
    <author email="irjudson@gmail.com" href="http://irjudson.org">
    	Ivan R. Judson - Microsoft
    </author>
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="BackupWebStorage" value="local"/>
    <preference name="loadUrlTimeoutValue" value="99999999" />
    <preference name="DisallowOverscroll" value="true" />    
    <preference name="KeyboardShrinksView" value="true" />    
    <content src="index.html" />
    <access origin="*" />
</widget>
